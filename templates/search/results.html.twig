
{% extends 'base.html.twig' %}

{% block title %}Résultats pour "{{ query }}" - Bella Couture{% endblock %}

{% block body %}
<div class="container my-5">
    <!-- En-tête de recherche -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('products') }}">Produits</a></li>
                    <li class="breadcrumb-item active">Recherche</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2">Résultats de recherche</h1>
                    <p class="text-muted mb-0">
                        {% if resultsCount > 0 %}
                            <strong>{{ resultsCount }}</strong> produit(s) trouvé(s) pour "<strong>{{ query }}</strong>"
                        {% else %}
                            Aucun produit trouvé pour "<strong>{{ query }}</strong>"
                        {% endif %}
                    </p>
                </div>
                <a href="{{ path('products') }}" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Voir tous les produits
                </a>
            </div>
        </div>
    </div>

    <!-- Filtres et résultats -->
    <div class="row">
        <!-- Sidebar avec filtres -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Affiner la recherche</h5>
                </div>
                <div class="card-body">
                    <!-- Formulaire de recherche -->
                    <form method="GET" action="{{ path('search') }}" class="mb-4">
                        <div class="mb-3">
                            <label for="searchQuery" class="form-label">Recherche</label>
                            <input type="text" class="form-control" id="searchQuery" name="q" 
                                   value="{{ query }}" placeholder="Rechercher...">
                        </div>
                        
                        <div class="mb-3">
                            <label for="searchCategory" class="form-label">Catégorie</label>
                            <select name="category" id="searchCategory" class="form-select">
                                <option value="">Toutes les catégories</option>
                                {% for category in categories %}
                                    <option value="{{ category.slug }}" 
                                            {{ currentCategory == category.slug ? 'selected' : '' }}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-2"></i>Rechercher
                        </button>
                    </form>

                    <!-- Suggestions -->
                    {% if resultsCount == 0 %}
                        <div class="alert alert-info">
                            <h6 class="alert-heading">Conseils de recherche :</h6>
                            <ul class="mb-0 ps-3">
                                <li>Vérifiez l'orthographe</li>
                                <li>Utilisez des termes plus généraux</li>
                                <li>Essayez d'autres mots-clés</li>
                            </ul>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Résultats -->
        <div class="col-md-9">
            {% if products|length > 0 %}
                <div class="row">
                    {% for product in products %}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card product-card h-100">
                                {% if product.images|length > 0 %}
                                    <img src="{{ asset('uploads/products/' ~ product.images.first.filename) }}" 
                                         class="card-img-top" alt="{{ product.name }}" 
                                         style="height: 250px; object-fit: cover;">
                                {% else %}
                                    <img src="{{ asset('images/placeholder.jpg') }}" 
                                         class="card-img-top" alt="Image non disponible" 
                                         style="height: 250px; object-fit: cover;">
                                {% endif %}
                                
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p class="card-text text-muted small">
                                        {{ product.description|length > 100 ? product.description|slice(0, 100) ~ '...' : product.description }}
                                    </p>
                                    
                                    <div class="mt-auto">
                                        <p class="h5 text-primary mb-2">{{ product.price }} Dt</p>
                                        <p class="card-text small mb-2">
                                            <span class="badge bg-light text-dark">{{ product.size }}</span>
                                            <span class="badge bg-light text-dark">{{ product.color }}</span>
                                            <span class="badge bg-info">{{ product.category.name }}</span>
                                        </p>
                                        
                                        <div class="d-grid gap-2">
                                            <a href="{{ path('product_detail', {'id': product.id}) }}" 
                                               class="btn btn-outline-primary">Voir détails</a>
                                            {% if product.quantity > 0 %}
                                                <form action="{{ path('cart_add', {'id': product.id}) }}" method="POST" class="d-inline">
                                                    <input type="hidden" name="quantity" value="1">
                                                    <button type="submit" class="btn btn-primary w-100">
                                                        <i class="fas fa-shopping-cart"></i> Ajouter
                                                    </button>
                                                </form>
                                            {% else %}
                                                <button class="btn btn-secondary w-100" disabled>
                                                    Rupture de stock
                                                </button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h3>Aucun résultat trouvé</h3>
                    <p class="text-muted mb-4">Essayez de modifier vos critères de recherche.</p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="{{ path('products') }}" class="btn btn-primary">
                            <i class="fas fa-bag-shopping me-2"></i>Voir tous les produits
                        </a>
                        <a href="{{ path('home') }}" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>Retour à l'accueil
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}