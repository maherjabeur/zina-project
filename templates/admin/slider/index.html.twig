{% extends 'base.html.twig' %}

{% block title %}Gestion du Slider - Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                   <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_dashboard') }}">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('admin_products') }}">
                            <i class="fas fa-tshirt"></i> Produits
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('admin_sizes') }}">
                            <i class="fas fa-ruler"></i> Tailles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('admin_categories') }}">
                            <i class="fas fa-tags"></i> Catégories
                        </a>
                    </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_orders') }}">
                            <i class="fas fa-shopping-cart"></i>
                            Commandes
                            {% set pending_orders = count_pending_orders() %}
                            {% if pending_orders > 0 %}
                                <span class="badge bg-danger">{{ pending_orders }}</span>
                            {% endif %}
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link active" href="{{ path('admin_slider') }}">
                            <i class="fas fa-images"></i> Slider
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('admin_settings') }}">
                            <i class="fas fa-dollar-sign"></i> Frais livraison
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Gestion du Slider</h1>
                <a href="{{ path('admin_slider_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle image
                </a>
            </div>

            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h6 class="card-title">Total images</h6>
                            <h4 class="card-text">{{ sliderImages|length }}</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h6 class="card-title">Actives</h6>
                            <h4 class="card-text">{{ sliderImages|filter(s => s.isActive)|length }}</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-warning">
                        <div class="card-body">
                            <h6 class="card-title">Inactives</h6>
                            <h4 class="card-text">{{ sliderImages|filter(s => not s.isActive)|length }}</h4>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Liste des images du slider -->
            <div class="card">
                <div class="card-body">
                    {% if sliderImages|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Titre</th>
                                        <th>Description</th>
                                        <th>Bouton</th>
                                        <th>Position</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for sliderImage in sliderImages %}
                                        <tr>
                                            <td>
                                                <img src="{{ asset('uploads/slider/' ~ sliderImage.filename) }}" 
                                                     class="img-thumbnail" alt="{{ sliderImage.title }}"
                                                     style="width: 100px; height: 60px; object-fit: cover;">
                                            </td>
                                            <td>
                                                <strong>{{ sliderImage.title ?? 'Sans titre' }}</strong>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    {{ sliderImage.description ? (sliderImage.description|slice(0, 50) ~ '...') : 'Aucune description' }}
                                                </small>
                                            </td>
                                            <td>
                                                {% if sliderImage.buttonText %}
                                                    <span class="badge bg-info">{{ sliderImage.buttonText }}</span>
                                                    <br>
                                                    <small class="text-muted">{{ sliderImage.buttonUrl }}</small>
                                                {% else %}
                                                    <span class="badge bg-secondary">Aucun</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">{{ sliderImage.position }}</span>
                                            </td>
                                            <td>
                                                {% if sliderImage.isActive %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('admin_slider_edit', {'id': sliderImage.id}) }}" 
                                                       class="btn btn-outline-secondary" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="POST" action="{{ path('admin_slider_toggle', {'id': sliderImage.id}) }}" 
                                                          class="d-inline">
                                                        <button type="submit" class="btn btn-{{ sliderImage.isActive ? 'warning' : 'success' }}" 
                                                                title="{{ sliderImage.isActive ? 'Désactiver' : 'Activer' }}">
                                                            <i class="fas fa-{{ sliderImage.isActive ? 'pause' : 'play' }}"></i>
                                                        </button>
                                                    </form>
                                                    <form method="POST" action="{{ path('admin_slider_delete', {'id': sliderImage.id}) }}" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette image du slider ?')"
                                                          class="d-inline">
                                                        <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-images fa-3x text-muted mb-3"></i>
                            <h3>Aucune image dans le slider</h3>
                            <p class="text-muted">Commencez par ajouter des images pour votre slider.</p>
                            <a href="{{ path('admin_slider_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Ajouter une image
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}