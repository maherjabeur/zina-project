{% extends 'base.html.twig' %}

{% block title %}Commande - Boutique Femme{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Finaliser ma commande</h1>

    <div class="row">
        <!-- Récapitulatif de la commande -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Récapitulatif de votre commande</h5>
                </div>
                <div class="card-body">
                    {% for item in cartData %}
                        <div class="row align-items-center mb-3 pb-3 border-bottom">
                            <div class="col-2">
                                {% if item.product.images|length > 0 %}
                                    <img src="{{ asset('uploads/products/' ~ item.product.images.first.filename) }}" 
                                         class="img-fluid rounded" alt="{{ item.product.name }}"
                                         style="height: 60px; object-fit: cover;">
                                {% else %}
                                    <img src="{{ asset('images/placeholder.jpg') }}" 
                                         class="img-fluid rounded" alt="Image non disponible"
                                         style="height: 60px; object-fit: cover;">
                                {% endif %}
                            </div>
                            <div class="col-6">
                                <h6 class="mb-1">{{ item.product.name }}</h6>
                                <p class="text-muted small mb-0">
                                    Taille: {{ item.product.size }} | 
                                    Couleur: {{ item.product.color }}
                                </p>
                            </div>
                            <div class="col-2 text-center">
                                <span class="text-muted">x{{ item.quantity }}</span>
                            </div>
                            <div class="col-2 text-end">
                                <span class="h6">{{ (item.product.price * item.quantity)|number_format(2) }} DT</span>
                            </div>
                        </div>
                    {% endfor %}
                    
                    {% set shipping = 7 %}
                    {% set totalWithShipping = total + shipping %}

                    <div class="row mt-3">
                        <div class="col-12 text-end">
                            <h6 class="mb-1">Sous-total: {{ total|number_format(2) }} DT</h6>
                            <h6 class="mb-1">Livraison: {{ shipping|number_format(2) }} DT</h6>
                            <h5>Total: <strong id="totalDisplay">{{ totalWithShipping|number_format(2) }} DT</strong></h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informations de livraison -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informations de livraison</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ path('checkout_process') }}">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="customer_name" class="form-label">Nom complet *</label>
                                <input type="text" class="form-control" id="customer_name" name="customer_name" 
                                       value="" 
                                       required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="customer_phone" class="form-label">Téléphone *</label>
                                <input type="tel" class="form-control" id="customer_phone" name="customer_phone" 
                                       value="" 
                                       pattern="[0-9]{8}" 
                                       title="Veuillez entrer un numéro de téléphone valide (8 chiffres)"
                                       required>
                                <div class="form-text">Format: 12345678</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="customer_email" class="form-label">Email (optionnel)</label>
                            <input type="email" class="form-control" id="customer_email" name="customer_email" 
                                   value=""
                                   placeholder="email@exemple.com">
                            <div class="form-text">Pour recevoir la confirmation de commande</div>
                        </div>

                        <div class="mb-3">
                            <label for="shipping_address" class="form-label">Adresse de livraison *</label>
                            <textarea class="form-control" id="shipping_address" name="shipping_address" 
                                      rows="3" placeholder="Numéro, rue, code postal, ville..." required></textarea>
                        </div>


                        <input type="hidden" name="shipping_cost" value="{{ shipping }}">

                       

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="terms" required>
                            <label class="form-check-label" for="terms">
                                J'accepte les <a href="#" target="_blank">conditions générales de vente</a> *
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="payButton">
                                <i class="fas fa-credit-card"></i> Confirmer et payer {{ totalWithShipping|number_format(2) }} DT
                            </button>
                            <a href="{{ path('cart') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour au panier
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Résumé de la commande -->
        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header">
                    <h5 class="mb-0">Votre commande</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total:</span>
                        <span>{{ total|number_format(2) }} DT</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Livraison:</span>
                        <span>{{ shipping|number_format(2) }} DT</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong id="totalSidebar">{{ totalWithShipping|number_format(2) }} DT</strong>
                    </div>

                    <div class="mb-3">
                        <h6>Articles ({{ cartData|length }})</h6>
                        {% for item in cartData %}
                            <div class="d-flex justify-content-between small text-muted">
                                <span>{{ item.product.name }} x{{ item.quantity }}</span>
                                <span>{{ (item.product.price * item.quantity)|number_format(2) }} DT</span>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="alert alert-light border small">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-lock text-success me-2"></i>
                            <strong>Paiement sécurisé</strong>
                        </div>
                        <p class="mb-0 small">Vos données sont protégées par un chiffrement SSL 256 bits.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.sticky-top {
    position: sticky;
    top: 20px;
    z-index: 1020;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const submitButton = document.getElementById('payButton');
    const totalDisplay = document.getElementById('totalDisplay');
    const totalSidebar = document.getElementById('totalSidebar');

    const baseTotal = {{ total }};
    const shipping = 7;
    const totalWithShipping = baseTotal + shipping;

    totalDisplay.textContent = totalWithShipping.toFixed(2) + ' DT';
    totalSidebar.textContent = totalWithShipping.toFixed(2) + ' DT';
    submitButton.innerHTML = `<i class="fas fa-credit-card"></i> Confirmer et payer ${totalWithShipping.toFixed(2)} DT`;

    form.addEventListener('submit', function(e) {
        if (!form.checkValidity()) {
            e.preventDefault();
            e.stopPropagation();
        }
        form.classList.add('was-validated');

        if (form.checkValidity()) {
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Traitement en cours...';
        }
    });
});
// Validation du téléphone
document.getElementById('customer_phone').addEventListener('input', function(e) {
    // Supprimer tous les caractères non numériques
    this.value = this.value.replace(/[^0-9]/g, '');
    
    // Limiter à 10 chiffres
    if (this.value.length > 8) {
        this.value = this.value.slice(0, 8);
    }
});

// Validation du formulaire
document.querySelector('form').addEventListener('submit', function(e) {
    const phone = document.getElementById('customer_phone').value;
    const email = document.getElementById('customer_email').value;
    
    // Validation téléphone
    if (phone.length !== 8) {
        e.preventDefault();
        alert('Veuillez entrer un numéro de téléphone valide (10 chiffres)');
        return;
    }
    
    // Validation email optionnel mais si rempli doit être valide
    if (email && !isValidEmail(email)) {
        e.preventDefault();
        alert('Veuillez entrer un email valide ou laisser le champ vide');
        return;
    }
});

function isValidEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
}
</script>
{% endblock %}
